{
    "simulation": {
        "n_sim": 10,
        "base_seed": 42,
        "sigma": {
            "type": "pve",
            "params": {
                "num_points": 6,
                "min_pve": 0.1,
                "max_pve": 0.6
            }
        }
    },
    "data": {
        "n_predictors": 100,
        "n_train": 1000,
        "signal_proportion": 0.1,
        "covariance_type": "banded", 
        "generator_type": "exact",
        "block_params": {
            "block_size": 50,
            "within_correlation": 0.7
        },
        "banded_params": {
            "gamma": 0.5
        }
    },
    "model": {
        "k_max": 35,
        "m_grid": {
            "type": "geometric",
            "params": {
                "base": 2,
                "num_points": 10
            }
        },
        "rgscv": {
            "n_estimators": 500,
            "n_resample_iter": 7,
            "cv": 5
        },
        "bagging": {
            "n_estimators": 500,
            "param_grid": {
                "max_samples": [0.5, 0.6, 0.7, 0.8, 0.9, 1.0],
                "max_features": [1.0]
            },
            "cv": 5
        },
        "smearing": {
            "n_estimators": 500,
            "param_grid": {
                "noise_sigma": [0.1, 0.2, 0.5, 1.0, 2.0, 5.0]
            },
            "cv": 5
        },
        "baseline": {
            "cv": 5
        }
    },
    "output": {
        "save_path": "results/raw/"
    }
}