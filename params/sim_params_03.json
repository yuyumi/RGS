{
    "simulation": {
        "n_sim": 3,
        "base_seed": 42,
        "sigma": {
            "type": "pve",
            "params": {
                "num_points": 5,
                "min_pve": 0.05,
                "max_pve": 0.6
            }
        }
    },
    "data": {
        "n_predictors": 100,
        "n_train": 1000,
        "signal_proportion": 0.1,
        "test_size": 0.1,
        "covariance_type": "banded", 
        "generator_type": "inexact",
        "generator_params": {
            "eta" : 0.9
        },
        "block_params": {
            "block_size": 50,
            "within_correlation": 0.7
        },
        "banded_params": {
            "gamma": 0.5
        }
    },
    "model": {
        "k_max": 20,
        "m_grid": {
            "type": "geometric",
            "params": {
                "base": 1.5,
                "num_points": 10
            }
        },
        "rgscv": {
            "n_estimators": 500,
            "n_resample_iter": 7,
            "cv": 5
        },
        "bagged_gs": {
            "n_estimators": 500,
            "cv": 5
        },
        "smeared_gs": {
            "n_estimators": 500,
            "cv": 5,
            "param_grid": {
                "noise_scale": [0.1, 0.2, 0.5, 1.0, 2.0, 5.0]
            }
        },
        "baseline": {
            "cv": 5
        }
    },
    "output": {
        "save_path": "results/raw/"
    }
}